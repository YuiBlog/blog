{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [],
    "source": "dist/server",
    "ignore": [
      "*.log",
      "tsconfig.json",
      "**/src/**",
      "**/node_modules/**"
    ]
  },
  "hosting": {
    "public": "dist/client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/assets/*",
        "destination": "/assets/"
      },
      {
        "source": "/api/**",
        "function": "https-api"
      },
      {
        "source": "**",
        "function": "https-render"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}